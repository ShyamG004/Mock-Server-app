    {
      "name": "OAuth 1.0",
      "description": "OAuth 1.0 requires Authorization header for all endpoints",
      "item": [
        {
          "name": "Step 1 - Get Request Token",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const timestamp = Math.floor(Date.now() / 1000);",
                  "const nonce = pm.variables.replaceIn('{{$randomUUID}}').replace(/-/g, '');",
                  "pm.variables.set('oauth_timestamp', timestamp);",
                  "pm.variables.set('oauth_nonce', nonce);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.details && jsonData.details.oauth_token) {",
                  "    pm.collectionVariables.set('oauth1_request_token', jsonData.details.oauth_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/oauth1/request-token",
            "header": [
              {
                "key": "Authorization",
                "value": "OAuth oauth_consumer_key=\"{{consumerKey}}\", oauth_nonce=\"{{oauth_nonce}}\", oauth_timestamp=\"{{oauth_timestamp}}\", oauth_signature_method=\"HMAC-SHA1\", oauth_signature=\"mock_signature\", oauth_version=\"1.0\""
