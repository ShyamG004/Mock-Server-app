        {
          "name": "Authorization Code Flow",
          "item": [
            {
              "name": "Step 1 - Get Authorization Code (comma scopes)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "var jsonData = pm.response.json();",
                      "if (jsonData.details && jsonData.details.code) {",
                      "    pm.collectionVariables.set('authCode', jsonData.details.code);",
                      "    console.log('Auth code saved: ' + jsonData.details.code);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/authorize?response_type=code&client_id={{clientId}}&redirect_uri=http://localhost:3000/callback&scope=read,write,profile&state=test_state"
              }
            },
            {
              "name": "Step 2 - Exchange Code for Token (Basic Auth)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "var jsonData = pm.response.json();",
                      "if (jsonData.access_token) {",
                      "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                      "    console.log('Access token saved');",
                      "}",
                      "if (jsonData.refresh_token) {",
                      "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "url": "{{baseUrl}}/token/basic",
                "auth": {
                  "type": "basic",
                  "basic": [
                    {
                      "key": "username",
                      "value": "{{clientId}}"
                    },
                    {
                      "key": "password",
                      "value": "{{clientSecret}}"
                    }
                  ]
                },
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/x-www-form-urlencoded"
                  }
                ],
                "body": {
                  "mode": "urlencoded",
                  "urlencoded": [
                    {
                      "key": "grant_type",
                      "value": "authorization_code"
                    },
                    {
                      "key": "code",
                      "value": "{{authCode}}"
                    },
                    {
                      "key": "redirect_uri",
                      "value": "http://localhost:3000/callback"
                    }
                  ]
                }
              }
            },
            {
              "name": "Step 3 - Test Access Token",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/oauth2/test",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{accessToken}}"
                  }
                ]
              }
            },
            {
              "name": "Step 4 - Refresh Token",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "var jsonData = pm.response.json();",
                      "if (jsonData.access_token) {",
                      "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                      "}",
                      "if (jsonData.refresh_token) {",
                      "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "url": "{{baseUrl}}/token/basic",
                "auth": {
                  "type": "basic",
                  "basic": [
                    {
                      "key": "username",
                      "value": "{{clientId}}"
                    },
                    {
                      "key": "password",
                      "value": "{{clientSecret}}"
                    }
                  ]
                },
                "header": [
                  {
