        {
          "name": "JWT ONLY (/token/jwt)",
          "item": [
            {
              "name": "✅ Valid - Client Credentials via JWT",
              "event": [
                {
                  "listen": "prerequest",
                  "script": {
                    "exec": [
                      "const header = { alg: 'HS256', typ: 'JWT' };",
                      "const payload = {",
                      "    iss: pm.collectionVariables.get('clientId'),",
                      "    sub: pm.collectionVariables.get('clientId'),",
                      "    exp: Math.floor(Date.now() / 1000) + 300,",
                      "    iat: Math.floor(Date.now() / 1000)",
                      "};",
                      "",
                      "const base64Header = btoa(JSON.stringify(header));",
                      "const base64Payload = btoa(JSON.stringify(payload));",
                      "const mockSignature = 'mock_signature_for_testing';",
                      "",
                      "const jwt = base64Header + '.' + base64Payload + '.' + mockSignature;",
                      "pm.variables.set('clientJWT', jwt);"
                    ]
                  }
                },
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "var jsonData = pm.response.json();",
                      "if (jsonData.access_token) {",
                      "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "url": "{{baseUrl}}/token/jwt",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/x-www-form-urlencoded"
